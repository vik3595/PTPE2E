<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Select Season" titleAlignment="Center" afterOpen="onAfterTimeFilterOpen" contentWidth="20%">
        <content>
            <f:SimpleForm id="idTimeFilterForm" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="12" singleContainerFullSize="false">
                <f:content>
                    <Label text="Season" />
                    <MultiComboBox id="idSelectSeason" showSelectAll="true" items="{DemoData>/Seasons}">
                        <items>
                            <core:Item text="{DemoData>name}" key="{DemoData>name}"></core:Item>
                        </items>
                    </MultiComboBox>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Apply" type="Emphasized" press="onApplyTimeFilter"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelTimeFilter"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>